{
  "name": "yum-food",
  "version": "1.0.0",
  "description": "A project for the job opening at the pace",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start-watch": "set DEBUG=yum-food* && nodemon  --verbose ",
    "heroku-postbuild": "cd frontend && rm -rf node_modules && npm install --cache /tmp/empty-cache && npm install && npm run build",
    "dev": "concurrently --kill-others  \"npm run start-watch\" \"npm run lint-w\"",
    "lint": "esw . --fix",
    "lint-w": "esw . --fix  -w",
    "test": "jest --setupFiles dotenv/config",
    "test:watch": "jest  --setupFiles dotenv/config --watchAll",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chyke007/Yum-food.git"
  },
  "keywords": [
    "pace.africa",
    "yum-food",
    "fullstack",
    "react",
    "redux",
    "jest",
    "tdd",
    "eslint",
    "tailwind"
  ],
  "author": "Nwachukwu Chibuike",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chyke007/Yum-food/issues"
  },
  "homepage": "https://github.com/chyke007/Yum-food#readme",
  "dependencies": {
    "babel-jest": "^24.9.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "debug": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint-watch": "^7.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7",
    "morgan": "^1.10.0",
    "redux-thunk": "^2.3.0",
    "supertest": "^5.0.0",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-syntax-jsx": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@shelf/jest-mongodb": "^1.2.3",
    "concurrently": "^5.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "jest": "^26.4.2",
    "prettier": "^2.1.2"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "latest"
    }
  }
}
